<div class="center hero-unit"> 

<% if signed_in? %>
	<h2>You are already signed in. </h2> 
<% else %>

	<div class='row'>
	
		<h1>Sign in</h1>
	
		<%= form_for(:session, url: sessions_path) do |sessionForm| %>
				
			<p>
				<%= sessionForm.label :login %> <br>
				<%= sessionForm.text_field :login %>
			</p>				
			
			<p>
				<%= sessionForm.label :password %> <br>
				<%= sessionForm.text_field :password %>
			</p>
				
			<p>
				<%= sessionForm.submit 'Sign in', class: 'btn btn-large btn-primary' %>
			</p>
				
			<p>
				New user?
				<%= link_to 'Sign up now!', signup_path %>
			</p>
		<% end %>
	</div>
<% end %>
<div class="center hero-unit"> 

<% if signed_in? && current_user.userType == 'admin' %>

<h1>List of users:</h1>

<table>
	<tr>
		<th>Login</th>
		<th>User type</th>
		<th>Registration time</th>
	</tr>
	
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.login, user_path(user) %> </td>
			<td><%= user.userType %>
			<td><%= user.created_at.to_s(:dayFormat) %></td>
		</tr>
	<% end %>
</table>

<br>

<%= link_to 'Main page', controller: 'welcome' %>

<% else %>
	<h2>You are not allowed to watch this page.</h2>
<% end %>